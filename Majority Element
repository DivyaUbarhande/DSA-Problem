class Solution {
    public int majorityElement(int[] nums) {
        int cand = 0;
        int count = 0;

        for(int i = 0; i < nums.length; i++) {
            if(count == 0) {
                cand = nums[i];  // set new candidate
            }

            if(cand == nums[i]) {
                count++;   // same as candidate, increase count
            } else {
                count--;   // different, decrease count
            }
        }

        return cand;
    }
}
